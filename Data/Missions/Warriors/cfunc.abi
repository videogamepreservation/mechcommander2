function ConcatIntList(@IntList DestList, Integer DestStart, IntList SourceList, integer SourceSize) : integer;

	var

		integer		x;
		integer		y;

	code

		for x = 0 to (SourceSize - 1) do
			y = DestStart + x;
			DestList[y] = SourceList[x];
		endfor;

		return(DestStart + SourceSize);

endfunction;

