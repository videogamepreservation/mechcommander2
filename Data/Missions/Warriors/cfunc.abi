function GetHitListNum(integer ObjID) : integer;

	var

		integer	x;
		integer	y;

	code

		for y = 0 to (NumHitLists - 1) do
			x = 0;
			while (AttackList[y,x] <> 0) do
				if (AttackList[y,x] == ObjID) then
					return(y);
				endif;
				x = x + 1;
			endwhile;
		endfor;

		return(-1);

endfunction;

