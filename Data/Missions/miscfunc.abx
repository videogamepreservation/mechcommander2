function UnitCount(integer Unit) : integer;

	var

		integer Count;
		integer X;
		integer[9] tallyList;

	code

		//----------------------------------------------------------
		// To speed it up, we'll set the ones we want to zero rather
		// than loop it...
		for X = 0 to 8 do
			tallyList[X] = 0;
		endfor;

		objectStatusCount(Unit, tallyList);
		Count = 0;
		for X = 0 to 8 do
			Count = Count + tallyList[X];
		endfor;
		return(Count);
		
endfunction;

