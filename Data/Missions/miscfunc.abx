function RemoveMechBay(integer Bay);

	var

		integer x;
		boolean foundit;

	code

		if (TotalMechBays < 1) then
			return;
		endif;

		foundit = FALSE;
		for x = 0 to (TotalMechBays - 1) do

			if (NOT foundit) then
				if (MechBays[x] == Bay) then
					foundit = TRUE;					
				endif;				
			else
				MechBays[x - 1] = MechBays[x];
			endif;				

		endfor;

		if (foundit) then
			TotalMechBays = TotalMechBays - 1;
		endif;

endfunction;

