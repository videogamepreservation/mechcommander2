function NumPlayerInArea(real X, real Y, real Radius) : integer;

	var

		integer		Num;
		integer		i;
		real		dis;
		position	Spot;

	code

		Num = 0;
		Spot[0] = X;
		Spot[1] = Y;
		Spot[2] = 0.0;		

		for i = PLAYER_VEHICLE0_LANCE0 to (PLAYER_VEHICLE0_LANCE0 + 11) do
			dis = distancetoPosition(i,Spot);
			if ((dis > 0.0) and (dis <= Radius)) then
				Num = Num + 1;
			endif;
		endfor;

		return(Num);

endfunction;


