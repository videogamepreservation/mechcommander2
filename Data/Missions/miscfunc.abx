function NumObjectListDead : integer;

	var

		integer i;
		integer Num;
		integer Status;

	code

		Num = 0;
		for i = 0 to (ObjectListSize - 1) do

			Status = ObjectStatus(ObjectList[i]);
			if ((Status == OBJECT_STATUS_DESTROYED) OR (Status == OBJECT_STATUS_DISABLED)) then
				Num = Num + 1;
			endif;

		endfor;

		return(Num);

endfunction;

